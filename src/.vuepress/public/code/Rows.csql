SELECT 
  Person.BusinessEntityID, 
  Person.PersonType,
  PersonType.PersonTypeDescription,
  Person.FirstName,
  Person.MiddleName,
FROM staging.Person
LEFT JOIN ROWS (
  ('SC' PersonType, 'Store Contact' PersonTypeDescription)
  ('IN','Individual (retail) customer') 
  ('SP', 'Sales person')
  ('EM', 'Employee (non-sales)')
  ('VC', 'Vendor contact')
  ('GC', 'General contact')
) PersonType USING PersonType